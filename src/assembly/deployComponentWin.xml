<component xmlns="http://maven.apache.org/ASSEMBLY-COMPONENT/2.1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/ASSEMBLY-COMPONENT/2.1.1 http://maven.apache.org/xsd/assembly-component-2.1.1.xsd">
    <fileSets>
        <!-- module contents: samples -->
        <!-- run scripts -->
        <fileSet>
            <directory>samples</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <excludes>
                <exclude>**/*.bat</exclude>
                <exclude>**/*.sh</exclude>
            </excludes>
            <outputDirectory>samples</outputDirectory>
            <lineEnding>crlf</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>samples</outputDirectory>
            <includes>
                <include>**/*.bat</include>
            </includes>
            <directory>samples</directory>
            <lineEnding>crlf</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>samples</outputDirectory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <directory>samples</directory>
            <fileMode>0777</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <!-- produced jar -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <includes>
                <include>${project.build.finalName}*.jar</include>
            </includes>
            <excludes>
                <exclude>${project.build.finalName}*-shaded.jar</exclude>
            </excludes>
            <outputDirectory></outputDirectory>
        </fileSet>

        <!-- run scripts -->
        <fileSet>
            <directory>bin</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <excludes>
                <exclude>**/*.bat</exclude>
                <exclude>**/*.sh</exclude>
            </excludes>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>crlf</lineEnding>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <includes>
                <include>**/*.bat</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>crlf</lineEnding>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0777</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <!-- user defined property files -->
        <fileSet>
            <directory>config</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <outputDirectory>config</outputDirectory>
            <lineEnding>crlf</lineEnding>
        </fileSet>
        <!-- static content -->
        <fileSet>
            <directory>.</directory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
            <outputDirectory></outputDirectory>
            <lineEnding>crlf</lineEnding>
        </fileSet>

        <!-- JavaDocs -->
        <!--<fileSet>-->
        <!--<directory>${project.build.directory}</directory>-->
        <!--<includes>-->
        <!--<include>*-javadoc.*</include>-->
        <!--</includes>-->
        <!--<outputDirectory>docs</outputDirectory>-->
        <!--<lineEnding>crlf</lineEnding>-->
        <!--</fileSet>-->
    </fileSets>
</component>